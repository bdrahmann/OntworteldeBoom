<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:keepScreenOn="true"
android:orientation="vertical"
tools:context=".MainActivity$PlaceholderFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="STATUS 1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TV01"
        android:layout_marginLeft="1dp"
        android:layout_width="wrap_content"
        android:background="#009688"
        android:padding="24dp"
        android:alpha="100"/>

    <TextView
        android:text="STATUS 2"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TV02"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/TV01"
        android:background="#009688"
        android:padding="24dp"
        android:alpha="100"/>

    <TextView
        android:text="STATUS 3"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TV03"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/TV02"
        android:background="#009688"
        android:padding="24dp"
        android:alpha="100"
        android:enabled="false"/>

    <TextView
        android:text="STATUS 4"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TV04"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/TV03"
        android:background="#009688"
        android:padding="24dp"
        android:alpha="100"/>

    <TextView
        android:text="STATUS 5"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TV05"
        android:layout_width="wrap_content"
        android:background="#009688"
        android:padding="24dp"
        android:alpha="100"
        android:layout_alignTop="@+id/TV04"
        android:layout_toRightOf="@+id/TV04"
        android:layout_toEndOf="@+id/TV04"/>

    <TextView
        android:text="STATUS 6"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TV06"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/TV05"
        android:background="#009688"
        android:padding="24dp"
        android:alpha="100"/>

    <TextView
        android:text="STATUS 7"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TV07"
        android:layout_width="wrap_content"
        android:background="#009688"
        android:padding="24dp"
        android:alpha="100"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TV06"
        android:layout_toEndOf="@+id/TV06"/>

    <TextView
        android:text="STATUS 8"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TV08"
        android:layout_width="wrap_content"
        android:background="#009688"
        android:padding="24dp"
        android:alpha="100"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TV07"
        android:layout_toEndOf="@+id/TV07"/>

    <TextView
        android:text="Pompen uit"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TVO01"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_below="@+id/TV01"
        android:layout_alignBaseline="@+id/TVO02"
        android:layout_alignBottom="@+id/TVO02"
        android:layout_alignLeft="@+id/TV01" />

    <TextView
        android:text="Pomp start"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TVO02"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/TV01"
        android:layout_below="@+id/TV02"
        android:padding="5dp"/>

    <ProgressBar
        android:id="@+id/pbSensorDelay"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/TV02"
        android:layout_below="@+id/TV03"
        android:padding="5dp"
        android:visibility="invisible" />

    <TextView
        android:text="Sensor delay"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TVO03"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/TV02"
        android:layout_below="@+id/TV03"
        android:padding="5dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TVO04"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/TV03"
        android:layout_below="@+id/TV04"
        android:padding="5dp"/>

    <TextView
        android:text="Sensor droog"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TVO05"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/TV04"
        android:layout_below="@+id/TV05"
        android:padding="5dp"/>

    <TextView
        android:text="Volgende pomp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TVO06"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/TV05"
        android:layout_below="@+id/TV06"
        android:padding="5dp"/>

    <TextView
        android:text="Stuur SMS"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TVO07"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/TV06"
        android:layout_below="@+id/TV07"
        android:padding="5dp"/>

    <TextView
        android:text="GESTOPT"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/TVO08"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/TV07"
        android:layout_below="@+id/TV08"
        android:padding="5dp"/>

</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Kopje1"
    >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="10sp"
        android:text="schijf:" />

    <TextView
        android:id="@+id/tvSchijf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:hint="schijf"
        android:layout_alignStart="@+id/tvBestand"
        android:layout_toEndOf="@+id/textView5"
        android:layout_alignBottom="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:textSize="10sp"
        android:text="bestand:" />

    <TextView
        android:id="@+id/tvBestand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:hint="bestand"
        android:layout_toEndOf="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginStart="120dp"
        android:layout_alignBottom="@+id/textView5"
        android:text="stuur SMS:" />

    <TextView
        android:id="@+id/tvSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/textView5"
        android:hint="SMS ja/nee" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_toEndOf="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignBottom="@+id/textView6"
        android:text="Telefoonnr:" />

    <TextView
        android:id="@+id/tvTelefoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_toEndOf="@+id/textView11"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/textView6"
        android:hint="nummer" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/tvADatum"
        android:layout_alignBottom="@+id/textView5"
        android:text="Arduino datum:" />

    <TextView
        android:id="@+id/tvADatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_alignBottom="@+id/textView5"
        android:hint="datum" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_toStartOf="@+id/tvATijd"
        android:layout_alignStart="@+id/textView13"
        android:layout_alignBottom="@+id/textView6"
        android:text="Arduino tijd:" />

    <TextView
        android:id="@+id/tvATijd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_alignStart="@+id/tvADatum"
        android:layout_below="@+id/tvADatum"
        android:layout_alignBottom="@+id/textView6"
        android:hint="tijd" />



</RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:id="@+id/Kopje2"
    android:background="@drawable/customborder" >

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Waterniveau :" />

        <TextView
            android:id="@+id/tvNiveau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/textView2"
            android:hint="niveau"
            android:textColor="#000" />

        <ProgressBar
            android:id="@+id/pbDelay"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginStart="110dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvprogress"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignStart="@id/pbDelay"
            android:layout_alignTop="@id/pbDelay"
            android:layout_alignEnd="@id/pbDelay"
            android:layout_alignBottom="@id/pbDelay"
            android:visibility="invisible"
            android:gravity="center"
            android:text="vlotterdelay"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="12dp"
            android:text="Temperatuur:" />

        <TextView
            android:id="@+id/tVTempC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView4"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/textView4"
            android:hint="temperatuur"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="12dp"
            android:text="Humidity:" />

        <TextView
            android:id="@+id/tVHum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/textView4"
            android:hint="humidity"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="12dp"
            android:text="Lux:" />

        <TextView
            android:id="@+id/tVLux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/textView4"
            android:hint="lux"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="24dp"
            android:text="Sensor 1 :" />

        <TextView
            android:id="@+id/tVDroog1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignStart="@id/tVLux"
            android:layout_toEndOf="@+id/textView8"
            android:hint="droog1"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="SMS status:" />

        <TextView
            android:id="@+id/tvSMSStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView40"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textView40"

            android:hint="SMS status" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView40"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@+id/textView40"
            android:text="SMS inhoud:" />

        <TextView
            android:id="@+id/tvSMSbericht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSMSStatus"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@+id/tvSMSStatus"
            android:hint="SMS bericht"/>

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:text="Handbediening"
            />

        <ToggleButton
            android:id="@+id/btnhandpomp1"
            android:checked="false"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView42"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@+id/btReset"
            android:textOff="Pomp1 Off"
            android:textOn="Pomp 1 On" />

        <ToggleButton
            android:id="@+id/btnhandpomp2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnhandpomp1"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@+id/btReset"
            android:textOff="Pomp2 Off"
            android:textOn="Pomp 2 On" />


        <Button
            android:id="@+id/btReset"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Reset Arduino"
            android:background="#ffeb3b"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true" />




    </RelativeLayout>

</LinearLayout>

</LinearLayout>





