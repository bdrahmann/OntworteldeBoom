<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stuur SMS"
        android:id="@+id/cbxSMS"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cbxSMS"
        android:layout_below="@+id/cbxSMS"
        android:layout_alignBaseline="@+id/ettelNummer"
        android:text="Telefoonnummer:" />

    <EditText
        android:id="@+id/ettelNummer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="mobiel (10 cijfers)"
        android:inputType="number"
        android:layout_below="@+id/cbxSMS"
        android:layout_toEndOf="@+id/textView30" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cbxSMS"
        android:layout_alignBaseline="@+id/etdroogTijd"
        android:text="Droogtijd:" />

    <EditText
        android:id="@+id/etdroogTijd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="geef droogtijd in"
        android:inputType="number"
        android:layout_below="@+id/ettelNummer"
        android:layout_toEndOf="@+id/textView34"
        android:layout_alignStart="@+id/ettelNummer" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView34"
        android:layout_toEndOf="@+id/etdroogTijd"
        android:layout_marginStart="40dp"
        android:text = "tijd om druppelsensor nat te laten worden. ( in seconden. Max 2 min.)"
        />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cbxSMS"
        android:layout_alignBaseline="@+id/etvlotterDelay"
        android:text="Vlotterdelay:" />

    <EditText
        android:id="@+id/etvlotterDelay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="geef vlotterdelay in"
        android:inputType="number"
        android:layout_below="@+id/etdroogTijd"
        android:layout_toEndOf="@+id/textView37"
        android:layout_alignStart="@+id/ettelNummer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etvlotterDelay"
        android:layout_toEndOf="@+id/etvlotterDelay"
        android:layout_alignStart="@+id/textView38"
        android:text = "tijdsvertraging in laagwater om dender te voorkomen. ( in seconden. Max 2 min.)"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cbxSMS"
        android:layout_alignBaseline="@+id/etdatum_tijd"
        android:text="datum en tijd:" />

    <EditText
        android:id="@+id/etdatum_tijd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="datum en tijd"
        android:layout_toEndOf="@+id/textView39"
        android:layout_below="@+id/etvlotterDelay"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/ettelNummer"
        android:focusable="false" />

    <Button
        android:id="@+id/btnDatestore"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" set Androidtijd op Arduino "
        android:layout_alignBottom="@+id/etdatum_tijd"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:id="@+id/btnStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store op Arduino"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"/>


</RelativeLayout>